%div.flex.flex-col.justify-between.min-h-screen.max-w-xs.pr-20.border-r.border-neutral-600
  %div
    = image_tag "favicon.png", class: "w-12 my-2"
    %div.flex.flex-col.items-start
      = link_to authenticated_root_path, class: "text-white text-xl p-3 rounded-[9999px] block hover:bg-neutral-900 data-[active='true']:font-extrabold", data: { active: current_page?(authenticated_root_path) } do
        %div.flex.gap-5
          %svg.w-6.h-6{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
            %path{d: "M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
          %span.mr-4 Home
      = link_to edit_user_registration_path, class: "text-white text-xl p-3 rounded-[9999px] block hover:bg-neutral-900 data-[active='true']:font-extrabold", data: { active: current_page?(edit_user_registration_path) } do
        %div.flex.gap-5
          %svg.w-6.h-6{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
            %path{d: "M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
          %span.mr-4 Profile
    = link_to "Hoot", new_hoot_path, class: "text-white text-xl bg-blue-500 flex py-4 justify-center rounded-full mt-6"
  = link_to "Log Out", destroy_user_session_path, data: { 'turbo-method': :delete }, class: "text-white text-xl mb-3"
